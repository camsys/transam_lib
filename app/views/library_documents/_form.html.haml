
= simple_form_for([@category, @document],
    :html => {:multipart => true, :class => 'form-vertical' },
    :wrapper => :vertical_form,
    :wrapper_mappings => {:check_boxes => :vertical_radio_and_checkboxes, :radio_buttons => :vertical_radio_and_checkboxes, :file => :vertical_file_input, :boolean => :vertical_boolean}) do |f|
  = f.input :name, :required => true
  = f.input :description, :as => :text, :required => true, :input_html => { :rows => 3 }, :placeholder => 'Enter a brief description of the document...'
  = f.input :file, :required => true

  = f.button :submit, :class => "btn btn-primary"
