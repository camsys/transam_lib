- if (can? :update, @category) or (can? :destroy, @category)
  .btn-group.pull-right.panel-action
    %button.btn.btn-primary.btn-sm.dropdown-toggle{:data => {:toggle => 'dropdown'}}
      %i.fa.fa-cog
      = " Actions"
      %span.caret
    %ul.dropdown-menu{:role => 'menu'}
      %li
        = link_to new_library_category_library_document_path(@category) do
          %i.fa.fa-plus.fa-fw
          = " Add document to category"
      - if can? :update, @category
        %li
          = link_to edit_library_category_path(@category) do
            %i.fa.fa-edit.fa-fw
            = " Update this category"

      - if can? :destroy, @category
        %li.divider
        %li
          = link_to library_category_path(@category), :method => :delete, :data => {:confirm => "Are you sure? The action cannot be undone!"}  do
            %i.fa.fa-trash-o.fa-fw
            = " Remove this category"
